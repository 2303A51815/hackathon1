      document.getElementById('modal').style.display = 'none';\par
    \}\par
\par
    window.onclick = function(event) \{\par
      const modal = document.getElementById('modal');\par
      if (event.target === modal) \{\par
        modal.style.display = 'none';\par
      \}\par
    \}\par
